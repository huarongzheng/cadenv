hardstatus on
hardstatus alwayslastline
#hardstatus string "%{.bW}%-w%{.rY}%n %t%{-}%+w %=%{..G} %c:%s "
#hardstatus string '%{= kG}[%{G}%H%{g}][%{= kw}%?%-w%?%{gc}(%n*%t)%{-}%?%+w%?%{kg}][%{B} %m-%d %{W} %c %{g}]'
#hardstatus string '%{= kG}[%{G}%H%{g}][%{= kw}%?%-Lw%?%{y}(%n*%t%?(%u)%?)%{w}%?%+Lw%?%?%=%{g}][%{B} %m-%d %{W} %c %{g}]' # backup
hardstatus alwayslastline "%{= kG}[%{G}%H] %{w}%-w%{my}%10>%n*%t%{-}%+w%< %=%{kG}%C%A %D, %Y-%m-%d"
vbell off
autodetach on
termcapinfo xterm* ti@:te@
#bindkey -k k5 prev # F5 for previous window
#bindkey -k k6 next # F6 for next window
#bindkey "^[[D" prev # ctrl-left
#bindkey "^[[C" next # ctrl-right
bindkey "^[[1;2D" prev # shift-left, use "cat -v" in terminal and tye the key(combinations to show the code)
bindkey "^[[1;2C" next #shift-right
#escape ^Xx
altscreen on
defscrollback 10000
#caption always "%?%F%{-b 4w}%:%{-b bb}%? %H | %l | %m-%d %c |%?%F%{-b 4w}%?%L=%-Lw%45>%{-b w4}%n%f* %t%{-}%+Lw%-0<"

